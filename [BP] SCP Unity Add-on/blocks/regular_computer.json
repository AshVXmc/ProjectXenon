{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "ashvx:regular_computer",
            "properties": {
                "regular_computer:facing_direction": [0, 1, 2, 3]
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('regular_computer:facing_direction') == 0",
                "components": {
                    "minecraft:rotation": [0, 180, 0]
                }
            },
            {
                "condition": "query.block_property('regular_computer:facing_direction') == 1",
                "components": {
                    "minecraft:rotation": [0, 0, 0]
                }
            },
            {
                "condition": "query.block_property('regular_computer:facing_direction') == 2",
                "components": {
                    "minecraft:rotation": [0, 270, 0]
                }
            },
            {
                "condition": "query.block_property('regular_computer:facing_direction') == 3",
                "components": {
                    "minecraft:rotation": [0, 90, 0]
                }
            }
        ],
        "components": {
            "minecraft:material_instances": {
                "*": {
                    "texture": "regular_computer",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:pick_collision": {
                "origin": [ -7, 0, -7 ],
                "size": [ 15, 15, 15 ]
            },
            "minecraft:loot": "loot_tables/empty.json",
            "minecraft:geometry": "geometry.computer",
            "minecraft:destroy_time": 3.0,
            "minecraft:friction": 0.5,
            "minecraft:map_color": "#00ff00",
            "minecraft:flammable": {
                "flame_odds": 0,
                "burn_odds": 0
            },
            "minecraft:block_light_emission": 0,
            "minecraft:block_light_absorption": 0,
            "minecraft:on_player_placing": {
                "event": "set_placing_rotation"
            }
        },
        "events": {
            "set_placing_rotation": {
                "set_block_property": {
                    "regular_computer:facing_direction": "query.cardinal_facing_2d-2" 
                }
            }
      }
    }
}